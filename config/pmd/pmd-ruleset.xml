<?xml version="1.0"?>
<ruleset name="Custom Ruleset"
         xmlns="http://pmd.sf.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/2.0.0 http://pmd.sf.net/ruleset/2.0.0/ruleset.xsd">
    <description>
        Custom PMD ruleset for checking code duplication.
    </description>

    <!-- Include the DuplicateCode rule -->
    <rule ref="category/java/design.xml/DuplicateCode">
        <properties>
            <property name="minLength" value="20"/>
            <property name="minTokens" value="100"/>
        </properties>
    </rule>
</ruleset>