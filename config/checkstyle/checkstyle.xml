<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//PUBLISHER//DTD Checkstyle Configuration 1.3//EN"
        "file:///C:/Users/A/Downloads/configuration_1_3.dtd">

<module name="Checker">
    <!-- Проверка заголовка -->
    <module name="Header">
        <property name="header" value="/**
 * Sample Header
 *
 * @author Huseyn
 */"/>
    </module>

    <!-- Проверка Javadoc -->
    <module name="TreeWalker">
        <module name="JavadocMethod">
            <property name="allowMissingParamTags" value="false"/>
            <property name="allowMissingReturnTag" value="false"/>
            <property name="validateThrows" value="true"/>
        </module>

        <!-- Проверка цикломатической сложности -->
        <module name="CyclomaticComplexity">
            <property name="max" value="10"/>
        </module>

        <!-- Проверка пробелов вокруг операторов -->
        <module name="WhitespaceAround">
            <property name="tokens" value="PLUS, MINUS"/>
        </module>
    </module>

    <!-- Проверка на TODO комментарии -->
    <module name="RegexpSingleline">
        <property name="format" value="TODO"/>
        <property name="message" value="TODO comments should be removed"/>
    </module>
</module>